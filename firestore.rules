rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Categories are readable by all, writable by authenticated users
    match /categories/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Items are readable by all, writable by authenticated users
    match /items/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}